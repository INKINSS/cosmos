---
import Layout from "../layouts/Layout.astro";
import "../styles/globals.css";
import Header from "../components/header/Header.astro";
import BannerPrincipal from "@/components/banners/BannerPrincipal.astro";
import MultiPlatform from "@/components/sections/MultiPlatform.astro";
import Statistics from "@/components/statistics/Statistics.astro";
import Eyelashes from "@/components/sections/Eyelashes";
import Footer from "@/components/footer/Footer";
---

<Layout title="cosmos || antivirus">
  <Header />
  <BannerPrincipal />
  <MultiPlatform />
  <Statistics />
  <Eyelashes client:visible />
  <Footer />
</Layout>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    overflow-x: hidden;
  }
</style>
